@model IEnumerable<LinhKienShop.Models.DiaChiGiaoHangViewModel>

@{
    ViewData["Title"] = "Sổ địa chỉ nhận hàng";
}

<h2 class="mb-4">Sổ địa chỉ nhận hàng</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<p>
    <a asp-action="Them" class="btn btn-primary"><i class="fas fa-plus me-2"></i>Thêm địa chỉ mới</a>
</p>

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Họ tên người nhận</th>
            <th>Số điện thoại</th>
            <th>Địa chỉ chi tiết</th>
            <th>Thành phố</th>
            <th>Quận/Huyện</th>
            <th>Phường/Xã</th>
            <th>Mặc định</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.HoTenNguoiNhan</td>
                <td>@item.SoDienThoai</td>
                <td>@item.DiaChiChiTiet</td>
                <td>@item.ThanhPho</td>
                <td>@item.QuanHuyen</td>
                <td>@item.PhuongXa</td>
                <td>
                    @if (item.LaMacDinh)
                    {
                        <span class="badge bg-success">Mặc định</span>
                    }
                </td>
                <td>
                    <a asp-action="Sua" asp-route-id="@item.MaDiaChiGiaoHang" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i> Sửa</a>
                    <form asp-action="Xoa" asp-route-id="@item.MaDiaChiGiaoHang" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc muốn xóa địa chỉ này?');">
                        <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>