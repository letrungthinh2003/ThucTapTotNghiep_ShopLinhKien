@model LinhKienShop.Models.PhuongThucThanhToan

@{
    ViewData["Title"] = "Thêm Phương Thức Thanh Toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h2 class="mb-0 text-center"><i class="fas fa-plus-circle me-2"></i><b>THÊM PHƯƠNG THỨC THANH TOÁN</b></h2>
        </div>
        <div class="card-body">
            <form asp-action="Them" method="post">
                <div class="mb-3">
                    <label asp-for="TenPhuongThucThanhToan" class="form-label fw-bold"></label>
                    <input asp-for="TenPhuongThucThanhToan" class="form-control" placeholder="Nhập tên phương thức" />
                    <span asp-validation-for="TenPhuongThucThanhToan" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="MoTa" class="form-label fw-bold"></label>
                    <textarea asp-for="MoTa" class="form-control" placeholder="Nhập mô tả (nếu có)" rows="4"></textarea>
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-start gap-2">
                    <button type="submit" class="btn btn-warning text-dark">
                        <i class="fas fa-save me-1"></i>Thêm
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}