@model LinhKienShop.Models.LoaiGiamGium
@{
    ViewData["Title"] = "Thêm Loại Giảm Giá";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white rounded-top">
            <h2 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Thêm Loại Giảm Giá</h2>
        </div>
        <div class="card-body">
            <form asp-action="Them" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="mb-3">
                    <label asp-for="TenLoaiGiamGia" class="form-label fw-bold">Tên Loại Giảm Giá</label>
                    <input asp-for="TenLoaiGiamGia" class="form-control rounded" placeholder="Nhập tên loại giảm giá" />
                    <span asp-validation-for="TenLoaiGiamGia" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="MoTa" class="form-label fw-bold">Mô Tả</label>
                    <textarea asp-for="MoTa" class="form-control rounded" rows="4" placeholder="Nhập mô tả (tùy chọn)"></textarea>
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="fas fa-save me-2"></i>Thêm
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-sm">
                        <i class="fas fa-arrow-left me-2"></i>Quay Lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
        transition: transform 0.3s;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15) !important;
        }

    .card-header {
        background: linear-gradient(45deg, #1e3a8a, #3b82f6);
        border-radius: 10px 10px 0 0 !important;
    }

    .form-control, .form-select {
        border-radius: 6px;
        transition: all 0.3s;
    }

        .form-control:focus {
            border-color: #3b82f6;
            box-shadow: 0 0 5px rgba(59, 130, 246, 0.5);
        }

    .btn-sm {
        padding: 8px 16px;
        border-radius: 6px;
        transition: all 0.3s;
    }

        .btn-sm:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}