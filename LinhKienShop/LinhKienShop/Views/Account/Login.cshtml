@model LinhKienShop.Models.NguoiDung
@{
    ViewData["Title"] = "Đăng Nhập";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<style>
    body {
        /* background-image: url('/images/bg_register.jpg'); */ /* Đường dẫn đến ảnh nền */
        background-size: cover; /* Phủ kín toàn bộ nền */
        background-repeat: no-repeat; /* Không lặp lại ảnh */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-height: 100vh; /* Đảm bảo body chiếm toàn bộ chiều cao màn hình */
    }

    .login-form {
        max-width: 400px;
        margin: 50px auto;
        background: rgba(255, 255, 255, 0.9); /* Thêm độ trong suốt để thấy được nền */
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        animation: fadeIn 0.5s ease-in-out;
    }

        .login-form h2 {
            margin-bottom: 25px;
            font-weight: bold;
            text-align: center;
            color: #198754;
        }

    .form-control {
        border-radius: 30px;
        padding-left: 40px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #198754;
            box-shadow: 0 0 10px rgba(25, 135, 84, 0.25);
        }

    .input-icon {
        position: relative;
    }

        .input-icon i {
            position: absolute;
            top: 50%;
            left: 15px;
            transform: translateY(-50%);
            color: #198754;
        }

    .btn-success {
        width: 100%;
        border-radius: 30px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .btn-success:hover {
            background-color: #157347;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(21, 115, 71, 0.4);
        }

    .forgot-password {
        text-align: right;
        margin-bottom: 15px;
    }

        .forgot-password a {
            color: #198754;
            text-decoration: none;
            font-size: 0.9rem;
            transition: all 0.3s ease;
        }

            .forgot-password a:hover {
                color: #157347;
                text-decoration: underline;
            }

    @@media (max-width: 576px) {
        .login-form {
            margin: 20px;
            padding: 20px;
        }
    }
</style>

<div class="login-form">
    <h2><i class="fas fa-sign-in-alt me-2"></i>Đăng Nhập</h2>
    <form asp-action="Login" method="post">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>
        <div class="form-group input-icon mb-3">
            <i class="fas fa-envelope"></i>
            <input name="email" class="form-control" placeholder="Nhập Email..." type="email" required />
        </div>

        <div class="form-group input-icon mb-4">
            <i class="fas fa-lock"></i>
            <input name="matKhau" type="password" class="form-control" placeholder="Nhập mật khẩu..." required />
        </div>

        <div class="forgot-password">
            <a href="@Url.Action("ForgotPassword", "Account")"> Quên mật khẩu?</a>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-success"><i class="fas fa-sign-in-alt me-2"></i>Đăng Nhập</button>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}