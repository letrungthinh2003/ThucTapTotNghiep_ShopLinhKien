<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nhân viên CSKH - @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="~/css/admin.css" rel="stylesheet">
    <link href="~/css/DanhMucStyle.css" rel="stylesheet">
    <link href="~/css/XuatXuStyle.css" rel="stylesheet">
    <link href="~/css/ThuongHieuStyle.css" rel="stylesheet">
</head>
<body>
    @using System.Security.Claims
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-dark sidebar">
                <div class="position-sticky pt-3">
                    <div class="text-center mb-4">
                        <img src="~/images/logo_shop.jpg" alt="Logo" class="img-fluid" style="max-width: 150px;">
                    </div>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Dashboard" asp-action="Index">
                                <i class="fas fa-tachometer-alt me-2 text-primary"></i>
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="SanPham" asp-action="Index">
                                <i class="fas fa-box me-2 text-success"></i>
                                Quản lý sản phẩm
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="DanhMuc" asp-action="Index">
                                <i class="fas fa-folder me-2 text-warning"></i>
                                Quản lý danh mục
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="XuatXu" asp-action="Index">
                                <i class="fas fa-globe me-2 text-info"></i>
                                Xuất xứ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="ThuongHieu" asp-action="Index">
                                <i class="fas fa-tag me-2 text-info"></i>
                                Thương hiệu
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Orders" asp-action="Index">
                                <i class="fas fa-shopping-cart me-2 text-danger"></i>
                                Quản lý đơn hàng
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="VaiTro" asp-action="Index">
                                <i class="fas fa-user-friends me-2 text-primary"></i>
                                Quản lý vai trò
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Account" asp-action="Index">
                                <i class="fas fa-user-friends me-2 text-primary"></i>
                                Quản lý khách hàng
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="NguoiDung" asp-action="Index">
                                <i class="fas fa-users me-2 text-success"></i>
                                Quản lý người dùng
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Banners" asp-action="Index">
                                <i class="fas fa-image me-2 text-warning"></i>
                                Quản lý banner
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="News" asp-action="Index">
                                <i class="fas fa-newspaper me-2 text-info"></i>
                                Quản lý tin tức
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Feedbacks" asp-action="Index">
                                <i class="fas fa-comment me-2 text-primary"></i>
                                Quản lý phản hồi
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Reviews" asp-action="Index">
                                <i class="fas fa-star me-2 text-warning"></i>
                                Quản lý đánh giá
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
                    <div class="container-fluid">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                                data-bs-target="#navbarNav" aria-controls="navbarNav">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav ms-auto align-items-center">
                                <li class="nav-item dropdown me-3">
                                    <a class="nav-link dropdown-toggle" href="#" role="button"
                                       data-bs-toggle="dropdown">
                                        <i class="fas fa-user-circle me-2"></i>
                                        @User.Identity.Name (@User.FindFirst(ClaimTypes.Role)?.Value)
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Account" asp-action="Profile">Profile</a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">
                                        <i class="fas fa-sign-out-alt me-2 text-danger"></i>
                                        Đăng xuất
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/admin.js"></script>
    <script src="~/js/DanhMucScript.js"></script>
    <script src="~/js/XuatXuScript.js"></script>
    <script src="~/js/ThuongHieuScript.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>