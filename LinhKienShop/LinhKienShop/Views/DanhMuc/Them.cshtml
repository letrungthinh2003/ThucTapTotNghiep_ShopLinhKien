@model LinhKienShop.Models.DanhMuc
@{
    ViewData["Title"] = "Thêm Danh Mục Mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="card shadow">
        <div class="card-header">
            <h2 class="mb-0 text-center"><i class="fas fa-plus-circle me-2"></i><b>THÊM DANH MỤC MỚI</b></h2>
        </div>
        <div class="card-body">
            <form asp-action="Them" method="post">
               @*  <div class="mb-3">
                    <label asp-for="MaDanhMuc" class="form-label fw-bold">Mã Danh Mục</label>
                    <input asp-for="MaDanhMuc" class="form-control" placeholder="Nhập mã danh mục" />
                    <span asp-validation-for="MaDanhMuc" class="text-danger"></span>
                </div> *@

                <div class="mb-3">
                    <label asp-for="TenDanhMuc" class="form-label fw-bold">Tên Danh Mục</label>
                    <input asp-for="TenDanhMuc" class="form-control" placeholder="Nhập tên danh mục" />
                    <span asp-validation-for="TenDanhMuc" class="text-danger"></span>
                </div>

                @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ContainsKey("TenDanhMuc"))
                {
                    <div class="alert alert-danger" role="alert">
                        @Html.ValidationMessageFor(model => model.TenDanhMuc)
                    </div>
                }

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary btn-custom">
                        <i class="fas fa-save me-2"></i>Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-custom">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}