@model LinhKienShop.Models.ThuongHieu

@{
    ViewData["Title"] = "Thêm Thương Hiệu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h2 class="mb-0 text-center"><i class="fas fa-plus-circle me-2"></i><b>THÊM THƯƠNG HIỆU SẢN PHẨM</b></h2>
        </div>
        <div class="card-body">
            <form asp-action="Them" method="post">
                <div class="mb-3">
                    <label asp-for="TenThuongHieu" class="form-label fw-bold"></label>
                    <input asp-for="TenThuongHieu" class="form-control" placeholder="Nhập tên thương hiệu" />
                    <span asp-validation-for="TenThuongHieu" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-start gap-2">
                    <button type="submit" class="btn btn-warning text-dark">
                        <i class="fas fa-save me-1"></i>Thêm
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}