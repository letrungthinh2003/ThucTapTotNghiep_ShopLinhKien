@model LinhKienShop.Models.XuatXu

@{
    ViewData["Title"] = "Xóa Xuất Xứ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0 text-center"><i class="fas fa-trash me-2"></i><b>XÁC NHẬN XÓA XUÁT XỨ</b></h2>
        </div>
        <div class="card-body">
            <h4 class="mb-3">Bạn có chắc chắn muốn xóa xuất xứ"<strong>@Model.TenXuatXu</strong>" không?</h4>

            <dl class="row">
                <dt class="col-sm-3">Mã danh mục:</dt>
                <dd class="col-sm-9">@Model.MaXuatXu</dd>

                <dt class="col-sm-3">Tên danh mục:</dt>
                <dd class="col-sm-9">@Model.TenXuatXu</dd>

                <dt class="col-sm-3">Số sản phẩm:</dt>
                <dd class="col-sm-9">@ViewBag.ProductCount</dd>
            </dl>

            @if (ViewBag.ProductCount > 0)
            {
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Danh mục này đang chứa <strong>@ViewBag.ProductCount</strong> sản phẩm, không thể xóa.
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="Xoa" method="post">
                <input type="hidden" asp-for="MaXuatXu" />
                <div class="d-flex justify-content-start gap-2">
                    <button type="submit" class="btn btn-danger" @(ViewBag.ProductCount > 0 ? "disabled" : "")>
                        <i class="fas fa-trash me-1"></i>Xóa
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>