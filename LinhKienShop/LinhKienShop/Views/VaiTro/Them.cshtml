@model LinhKienShop.Models.VaiTro
@{
    ViewData["Title"] = "Thêm Vai Trò Mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="card shadow">
        <div class="card-header">
            <h2 class="mb-0 text-center"><i class="fas fa-plus-circle me-2"></i><b>THÊM VAI TRÒ MỚI</b></h2>
        </div>
        <div class="card-body">
            <form asp-action="Them" method="post">
                <div class="mb-3">
                    <label asp-for="TenVaiTro" class="form-label fw-bold">Tên Vai Trò</label>
                    <input asp-for="TenVaiTro" class="form-control" placeholder="Nhập tên vai trò" />
                    <span asp-validation-for="TenVaiTro" class="text-danger"></span>
                </div>

                @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ContainsKey("TenVaiTro"))
                {
                    <div class="alert alert-danger" role="alert">
                        @Html.ValidationMessageFor(model => model.TenVaiTro)
                    </div>
                }

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary btn-custom">
                        <i class="fas fa-save me-2"></i>Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-custom">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}