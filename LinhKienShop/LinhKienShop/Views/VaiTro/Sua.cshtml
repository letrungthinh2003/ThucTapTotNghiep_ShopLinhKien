@model LinhKienShop.Models.VaiTro

@{
    ViewData["Title"] = "Sửa Vai Trò";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h2 class="mb-0 text-center"><i class="fas fa-edit me-2"></i><b>SỬA VAI TRÒ</b></h2>
        </div>
        <div class="card-body">
            <form asp-action="Sua" method="post">
                <input type="hidden" name="maVaiTro" value="@Model.MaVaiTro" />

                <div class="mb-3">
                    <label class="form-label fw-bold">Mã vai trò</label>
                    <input class="form-control" value="@Model.MaVaiTro" disabled />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Tên vai trò</label>
                    <input name="tenVaiTro" class="form-control" value="@Model.TenVaiTro" />
                    @if (ViewData.ModelState["tenVaiTro"]?.Errors.Any() == true)
                    {
                        <span class="text-danger">@ViewData.ModelState["tenVaiTro"].Errors.First().ErrorMessage</span>
                    }
                </div>

                <div class="d-flex justify-content-start gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-1"></i>Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>